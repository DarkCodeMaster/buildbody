/* pages/home/home.wxss */
page {
    background-color: #fafafa;
}
.box-header {
    width: 100%;
    height: 50%;
}



.header {
    display: flex;
}

.box-header .introduce {
    padding: 0 42rpx;
}

.box-background {
    filter: blur(6rpx);
}

.box-mask {
    background-color: #e84545;
    opacity: 0.8;
    position: absolute;
}

.box{
    margin: 0,50%,0,0;
    width: 100%;
    height: 50%;
    background-color: #fafafa;
    opacity: 0.8;
    position:absolute;
    top:50%;
}

.title-style {
  color: #fafafa;
  font-size: 50px;
  width: 100%;
  height: 100%;
  display: flex;
  
  align-items: center;
  justify-content: center;

}

.title-style-white {
  color: #e84545;
  font-size: 50px;
  width: 100%;
